{
  "name": "portfolio-apps-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build:portfolio": "npm run build --prefix portfolio",
    "build:tftduos": "npm run build --prefix apps/tftduos",
    "build:site-performance": "npm run build --prefix apps/site-performance",
    "check:backend": "python -m py_compile apps/backend/main.py apps/backend/duo_analytics.py",
    "test:tftduos:client": "npm --prefix apps/tftduos/client run test",
    "verify:local": "npm run test:tftduos:client && npm run check:backend && npm run build:portfolio && npm run build:tftduos && npm run build:site-performance",
    "dev:all": "concurrently -k -n backend,tftduos,siteperf -c cyan,green,yellow \"npm run dev:brianz:backend\" \"npm run dev:tftduos:client\" \"npm run dev:site-performance:client\"",
    "dev:tftduos:client": "npm --prefix apps/tftduos/client run dev",
    "dev:brianz:backend": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 3001 --app-dir apps/backend",
    "dev:tftduos:server": "npm run dev:brianz:backend",
    "dev:site-performance:client": "npm --prefix apps/site-performance/client run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}

